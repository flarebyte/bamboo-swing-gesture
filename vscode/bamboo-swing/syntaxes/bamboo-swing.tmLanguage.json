{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Bamboo Swing Gesture Core",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#switches"
		},
		{
			"include": "#variable"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.bambooswing",
				"match": "^\\?(all)\\s"
			}]
		}
		,"constants": {
			"patterns": [{
				"name": "variable.other.bambooswing",
				"match": "=\\s([A-Z][A-Za-z0-9]+\\s*){1,12}\\s*$"
			}]
		}
		,"switches": {
			"patterns": [{
				"name": "entity.name.type.bambooswing",
				"match": "=\\s(([A-Z][A-Za-z0-9]+)(:(\\?|@|\\$)[a-z0-9-]+)?\\s*){1,12}\\s*$"
			}]
		}
		,"variable": {
			"patterns": [{
				"name": "entity.name.tag.bambooswing",
				"match": "^(\\?|@|\\$)[a-z0-9-]+\\b"
			}]
		}

	},
	"scopeName": "source.bambooswing"
}